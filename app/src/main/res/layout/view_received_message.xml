<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_marginEnd="@dimen/_45sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11 June 21"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/mic_color"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginBottom="20dp"
        android:paddingStart="@dimen/_3sdp"
        android:paddingEnd="@dimen/_3sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <include
            android:id="@+id/cImageView"
            android:layout_height="@dimen/_25sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            layout="@layout/view_photo" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/received_message_background"
            android:layout_marginTop="@dimen/_6sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMessage"
                fontPath="fonts/Montserrat-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="Dear , hii"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:42 am"
                android:textColor="@color/white"
                fontPath="fonts/Montserrat-Regular.ttf"
                tools:ignore="MissingPrefix"
                android:textSize="@dimen/_6ssp"
                android:layout_marginBottom="@dimen/_6ssp"
                android:paddingStart="@dimen/_6ssp"
                android:paddingEnd="@dimen/_6ssp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>