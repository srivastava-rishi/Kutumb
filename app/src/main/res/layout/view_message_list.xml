<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rlRoot"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ripple"
        android:background="@color/white"
        tools:context="com.rstudios.splash.SplashActivity">

        <include
            android:id="@+id/cImageView"
            layout="@layout/view_photo" />

        <LinearLayout
            android:id="@+id/llContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cImageView"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvName"
                    fontPath="fonts/Montserrat-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:text="JZ-JioSvc"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_11ssp"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/tvTime"
                    fontPath="fonts/Montserrat-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:text="1:08 PM"
                    android:layout_centerVertical="true"
                    android:textColor="@color/grey2"
                    android:textSize="@dimen/_8ssp"
                    tools:ignore="MissingPrefix" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="आपके जियो नंबर 6203671183 पर Rs. 101.00 का रिचार्ज सफलतापूर्वक हो गया है।
DO NOT SHARE: 5586 is the OTP for your OlaCabs account. Keep this OTP to yourself for account safe"
                android:textSize="@dimen/_10ssp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/_2sdp"
                android:textColor="@color/grey"
                fontPath="fonts/Montserrat-Regular.ttf"
                tools:ignore="MissingPrefix"
                />

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/ghostWhite"
            android:layout_below="@+id/cImageView"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:visibility="visible" />

    </RelativeLayout>

</layout>